[user]
	email = mulder.tom@gmail.com
	name = Tom Mulder
[color]
	branch = auto
	status = auto
	diff = auto
	ui = auto
	interactive = auto
[pack]
	threads = 0
[diff]
	renamelimit = 0
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = blue reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
	co = checkout
	st = status
	ci = commit -a
	w = whatchanged
	df = diff
	br = branch
	lg = log
	pom = push origin master
	unadd = reset HEAD
[apply]
	whitespace = fix
[push]
	default = matching
[merge]
	# Include summary of merged commits into all newly created merge
	# commits. The newly created commit will contain a one-line summary
	# of every merged commits
	log = true

	# show merge statistics after merge.
	stat = true
[branch]
	# When creating a new branch off a remote branch, always set it up to
	# track the remote branch so that we can pull from there.
	autoseupmerge = always
